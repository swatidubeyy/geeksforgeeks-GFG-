// Surce page --->>> https://practice.geeksforgeeks.org/problems/left-view-of-binary-tree/1


class Tree
{
    //Function to return list containing elements of left view of binary tree.
    
    
    ArrayList<Integer> leftView(Node root)
    {
      
      ArrayList<Integer> retval = new ArrayList<>();
      
      if(root == null){
          return retval ;
      }
      
      Queue<Node> mq = new LinkedList<>();
      
      mq.add(root);
      
      while(mq.size() > 0){
          int ls = mq.size();
          for(int i = 0 ; i < ls ; i++){
              Node rn = mq.remove();
              
              if(i == 0){
                  retval.add(rn.data);
              }
              
              if(rn.left != null){
                  mq.add(rn.left);
              }
              if(rn.right != null){
                  mq.add(rn.right);
              }
          }
      }
      
      return retval;
      
    }
}
